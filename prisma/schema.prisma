generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlserver"
  url      = env("DB_URL")
}

model User {
  id        Int     @id @default(autoincrement())
  login     String  @unique
  email     String  @unique
  password  String 
}

model Address {
  id            Int @id @default(autoincrement())
  id_kraju      Int
  wojewodztwo   String
  kod_pocztowy  String
  ulica         String
  number_domu   Int
  number_lokalu Int
  powiat        String
  kraj          Country @relation(fields: [id_kraju], references: [id])
  podmioty      Podmiot[]
  klienci       Klient[]
}

model Country {
  id        Int       @id @default(autoincrement())
  kraj      String
  kod_kraju String    @db.NVarChar(3) @unique
  adresy    Address[]
}

model Podmiot {
  id        Int       @id @default(autoincrement())
  nip       String
  nazwa     String
  id_adresu Int
  adres     Address   @relation(fields: [id_adresu], references: [id])
}

model Klient {
  id        Int       @id @default(autoincrement())
  nip       String
  nazwa     String
  id_adresu Int
  adres     Address   @relation(fields: [id_adresu], references: [id])
}
